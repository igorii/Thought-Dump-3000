<% include header.ejs %>

<form method="post" action="/blog/update">
    <input type="hidden" name="_id" value="<%- article._id %>">
    <input style="width:100%" id="edit-title" type="text" name="title" value="<%- article.title %>">
    <textarea style="width:100%;height:450px" id="edit-markdown" name="body">
        <%- article.body %>
    </textarea>
    <br>
    <br>
    Github <input style="width:100px" id="edit-user" type="text" name="github" value="<%- article.github %>">
    <br>
    User <input style="width:100px" id="edit-user" type="text" name="user">
    <br>
    Pass <input style="width:100px" id="edit-pass" type="text" name="pass">
    <br>
    <br>
    <input type="submit" value="Save">
</form>

<% include footer.ejs %>
