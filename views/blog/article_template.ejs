<div class="article-metadata">
    <span class="created-at">Posted
        <%- ('00' + article.date.getDate()).slice(-2)       + '-' +
           ('00' + (article.date.getMonth() + 1)).slice(-2) + '-' +
            article.date.getFullYear() %>
    </span>
    <br>
    <a href="/blog/id/<%= article._id %>#comments">
        <%- article.comments.length %> Comment<%- article.comments.length === 1 ? '' : 's' %>
    </a>
</div>

<div class="article">
    <a class="article-title" href="/blog/id/<%= article._id %>">
        <%= article.title %>
    </a>

    <div class="article-content">
        <%- article.body %>
